<table class='table'>
  <thead>
    <tr class="table-secondary">
      <th>ユーザーID</th>
      <th>ユーザー名</th>
      <th>メールアドレス</th>
      <th>ステータス</th>
    </tr>
  </thead>
  <tbody>
    <% users.each do |user| %>
      <tr class="bg-white">
        <td><%= user.id %></td>
        <td> 
          <%= link_to admin_user_path(user.id) do %>
            <%= user.username %>
          <% end %>
        </td>
        <td><%= user.email %></td>
        <td>
          <% if user.is_active == true %>
            <div style="color: green;">有効</div>
          <% elsif user.is_active == false %>
            <div style="color: gray;">退会</div>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>