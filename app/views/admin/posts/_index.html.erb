<table class='table'>
  <thead>
    <tr class="admin-table-head">
      <th>投稿ID</th>
      <th>投稿日時</th>
      <th>投稿ユーザー名</th>
      <th>タイトル</th>
    </tr>
  </thead>

  <tbody>
    <% posts.each do |post| %>
      <tr class="bg-white">
        <td><%= post.id %></td>
        <td><%= link_to post.created_at.strftime('%y/%m/%d %H:%M:%S'), admin_post_path(post.id) %></td>
        <td><%= link_to post.user.username, admin_user_path(post.user.id) %></td>
        <td><%= post.title %></td>
      </tr>
    <% end %>
  </tbody>
</table>