<%= form_with model: [post, comment], local: false, html: { id: "new_comment_form" } do |f| %>
  <div class="d-flex flex-column w-100">
    <%= f.text_area :comment, rows: 3, class: 'form-control post_body comment-textarea', id: "comment_textarea", placeholder: "コメントを入力してください" %>
    <div class="d-flex justify-content-between align-items-center mt-1">
      <small class="text-muted"><span id="char_count">0</span>/100文字</small>
      <%= f.submit "投稿", class: "btn btn-sm btn-primary", id: "submit_comment", disabled: true %>
    </div>
  </div>
<% end %>