<%= form_with model: [post, comment], local: false, html: { id: "new_comment_form" } do |f| %>
  <div class="w-100">
    <%= f.text_area :comment, rows: 3, class: 'form-control comment-textarea', id: "comment_textarea", placeholder: "コメントを入力してください" %>
    <div class="mt-1 d-flex justify-content-start align-items-center">
      <%= f.submit "投稿", class: "btn btn-sm btn-primary", id: "submit_comment", disabled: true %>
      <small class="ml-3 mb-0 text-muted"><span id="char_count">0</span>/100文字</small>
    </div>
  </div>
<% end %>