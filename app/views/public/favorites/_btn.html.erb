<% if favorite = post.favorites.find_by(user_id: current_user.id) %>
  <%= link_to post_favorite_path(post, favorite), method: :delete, remote: true, style: "color: red;" do %>
    ♥
    <%= post.favorites.count %>
  <% end %>
<% else %>
  <%= link_to post_favorites_path(post), method: :post, remote: true, style: "color: gray;" do %>
    ♡
    <%= post.favorites.count %>
  <% end %>
<% end %>