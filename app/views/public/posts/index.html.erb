<div class="container">
  <div class="row">
    <div class="col-2 my-5 ml-4">
      <h4 class="text-center">投稿一覧</h4>
    </div>
  </div>
</div>

<div class="container">
  <div class="row">
    <div class="col">
      <% if @posts.present? %>
        <div class="d-flex flex-wrap mx-5">
          <%= render 'index', posts: @posts %>
        </div>
      <% else %>
        <p>投稿はまだありません。</p>
      <% end %>
      <div class="d-flex justify-content-center my-4">
        <%= paginate @posts %>
      </div>
    </div>
  </div>
</div>