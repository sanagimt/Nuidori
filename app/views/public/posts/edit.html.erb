<div class="container">
  <div class="row">
    <div class="col-2 my-5 ml-4">
      <h4 class="text-center">投稿編集</h4>
    </div>
  </div>

  <div class="row">
    <div class="col-2"></div>
    <div class="col-5">
    <% if @post.errors.any? %>
      <ul>
        <% @post.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    <% end %>
    </div>
    <div class="col-5"></div>
  </div>

  <div class="row">
    <div class="col-2"></div>
    <div class="col-8">
       <%= render 'form', post: @post, toys: @toys, users: @users %>
    </div>
    <div class="col-2"></div>
  </div>

  <br>
  <%= link_to "投稿に戻る", post_path(@post.id) %>
  <br>
  <%= link_to "投稿を削除する", post_path(@post), method: :delete, "data-confirm" => "本当に削除しますか？" %>

</div>
