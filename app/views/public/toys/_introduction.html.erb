<div class="mb-4 p-3 border rounded bg-white shadow-sm">
  <div class="d-flex align-items-center justify-content-between mb-3">
    <div class="d-flex align-items-center">
      <%= image_tag toy.get_toy_image(100,100), class: "rounded-circle mr-3", style: "width: 100px; height: 100px; object-fit: cover;" %>
      <div>
        <h4 class="mb-1"><%= toy.name %></h4>
      </div>
    </div>

    <% if current_user == user %>
      <%= link_to "ぬいぐるみ情報編集", edit_toy_path(toy), class: "btn btn-outline-primary" %>
    <% end %>

  </div>

  <div class="mb-2">
  持ち主さん
    <%= link_to user_path(user.username), class: "font-weight-bold text-dark text-decoration-none" do %>
      <%= image_tag user.get_profile_image(50,50), class: "rounded-circle mr-2", style: "width: 50px; height: 50px; object-fit: cover;" %>
      <%= user.nickname %>
      (<%= user.username %>)
    <% end %>
  </div>
  
  <div class="mb-2">
    <%= simple_format(toy.introduction) %>
  </div>
</div>