<div class="mb-4 p-3 border rounded bg-white">
  <div class="d-flex align-items-center justify-content-between mb-3">
    <div class="d-flex align-items-center">
      <%= image_tag toy.get_toy_image(100,100), class: "rounded-circle mr-3 toy-show-image" %>
      <div>
        <h4 class="mb-1"><%= toy.name %></h4>
      </div>
    </div>

    <% if current_user == user %>
      <%= link_to "ぬいぐるみ情報編集", edit_toy_path(toy), class: "btn btn-outline-primary", data: {"turbolinks" => false}  %>
    <% end %>

  </div>

  <div class="mb-2 small">
  持ち主さん　
    <%= link_to user_path(user.username), class: "text-dark text-decoration-none" do %>
      <%= image_tag user.get_profile_image(30,30), class: "rounded-circle mr-2 toy-show-user-image" %>
      <%= user.nickname %>
      (<%= user.username %>)
    <% end %>
    　<%= link_to "ぬいぐるみ一覧", user_toys_path(user.username), class: "text-dark text-decoration-none border rounded p-2 d-inline-block" %>
  </div>
  
  <div class="mb-2">
    <%= simple_format(toy.introduction) %>
  </div>
</div>