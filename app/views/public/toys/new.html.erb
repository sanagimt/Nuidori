<div class="container mt-4">
  <div class="row justify-content-center">
    <div class="col-6 text-center mb-4">
      <h4>ぬいぐるみ登録フォーム</h4>
    </div>
  </div>

  <% if @toy.errors.any? %>
    <div class="row justify-content-center">
      <div class="col-6">
        <div class="alert alert-danger">
          <ul class="mb-0">
            <% @toy.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      </div>
    </div>
  <% end %>

  <div class="row">
    <div class="col-2"></div>
    <div class="col-8">
       <%= render 'form', toy: @toy %>
    </div>
    <div class="col-2"></div>
  </div>

  <div class="row mb-4">
    <div class="col-2"></div>
    <div class="col-4" >
      <%= link_to "←ぬいぐるみ一覧に戻る", user_toys_path(current_user.username), class: "btn btn-outline-secondary" %>
    </div>
    <div class="col-6"></div>
  </div> 
</div>