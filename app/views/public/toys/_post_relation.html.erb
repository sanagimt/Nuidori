<div style="width: 820px; margin-top: 40px;">
  <h5 style="margin-bottom: 16px;">関連するぬいぐるみ</h5>
  <% if toys.any? %>
    <div style="display: flex; flex-wrap: wrap; gap: 16px;">
      <% toys.each do |toy| %>
        
        <div style="width: 120px; text-align: center;">
          <%= link_to toy_path(toy), class: "text-decoration-none text-dark" do %>
            <%= image_tag toy.get_toy_image(100,100), class: "rounded-circle mr-3", style: "width: 50px; height: 50px; object-fit: cover;" %>
            <div style="margin-top: 8px; font-size: 0.875rem;"><%= toy.name %></div>
          <% end %>
        </div>
      <% end %>
    </div>
  <% else %>
    <p style="color: #6c757d;">関連するぬいぐるみは登録されていません。</p>
  <% end %>
</div>