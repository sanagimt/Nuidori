<h2>Sign up</h2>

<%= form_with model: @user, url: user_registration_path do |f| %>
  <%= render "public/shared/error_messages", resource: resource %>

  <div class="field">
  <%= f.label :last_name, "(姓)" %><br />
  <%= f.text_field :last_name, autofocus: true, placeholder: "令和" %>
  </div>

  <div class="field">
  <%= f.label :first_name, "(名)" %><br />
  <%= f.text_field :first_name, autofocus: true, placeholder: "太郎" %>
  </div>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "nuidori@sample.com" %>
  </div>

  <div class="field">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password", placeholder: "半角英数字6文字以上" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "再度入力してください" %>
  </div>
 
  <div class="field">
  <%= f.label :username, "ユーザー名（半角英数字4文字以上）" %><br />
  <%= f.text_field :username, autofocus: true, placeholder: "半角英数字4文字以上" %>
  </div>

  <div class="field">
  <%= f.label :nickname, "ニックネーム（表示名）" %><br />
  <%= f.text_field :nickname, autofocus: true, placeholder: "表示名" %>
  </div>

  <div class="actions">
    <%= f.submit "Sign up" %>
  </div>
<% end %>

<%= render "public/shared/links" %>
