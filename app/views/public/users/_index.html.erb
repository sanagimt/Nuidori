<% users.each do |user| %>
  <div class="d-flex align-items-center justify-content-between mb-3">
    <div class="d-flex align-items-center text-dark text-decoration-none">
      <%= link_to user_path(user.username), class: "d-flex align-items-center text-dark text-decoration-none" do %>
        <%= image_tag user.get_profile_image(50, 50), class: "user-index-profile-image" %>
        <div>
          <div class="font-weight-bold"><%= user.nickname %></div>
          <div class="text-muted">(<%= user.username %>)</div>
        </div>
      <% end %>
    </div>

    <div class="d-flex align-items-center">
      <div class="d-flex mr-3">
        <%= render 'public/relationships/counter', user: user %>
      </div>

      <div id="relationship_btn_<%= user.id %>">
        <% if current_user != user %>
          <%= render 'public/relationships/btn', user: user %>
        <% else %>
          <span class="empty-relationship-space"></span>
        <% end %>
      </div>
    </div>
  </div>
<% end %>