<div class="container">
  <div class="row">
    <div class="col-6 my-5 ml-4">
      <h4><%= current_user.nickname %>さんのいいね一覧</h4>
    </div>
  </div>
  <div class="row">
    <div class="col">
      <% if @posts.present? %>
      <div class="d-flex flex-wrap mx-4">
        <%= render 'public/posts/index', posts: @posts %>
      </div>
      <% else %>
        <p>いいねした投稿はまだありません。</p>
      <% end %>
      <div class="d-flex justify-content-center my-4">
        <%= paginate @posts %>
      </div>
    </div>
  </div>
</div>