<div class="mb-4 p-3 border rounded bg-white shadow-sm">
  <div class="d-flex align-items-center justify-content-between mb-3">
    <div class="d-flex align-items-center">
      <%= image_tag user.get_profile_image(100,100), class: "rounded-circle mr-3", style: "width: 100px; height: 100px; object-fit: cover;" %>
      <div>
        <h4 class="mb-1"><%= user.nickname %></h4>
        <h6 class="mb-2 text-muted">（<%= user.username %>）</h6>
      </div>
    </div>

    <% if current_user != user %>
      <div id="relationship_btn_<%= user.id %>">
        <%= render 'public/relationships/btn', user: user %>
      </div>
    <% elsif current_user == user %>
      <%= link_to "ユーザー情報編集", edit_information_path, class: "btn btn-outline-primary", data: {"turbolinks" => false} %>
    <% end %>

  </div>

  <div class="mb-2">
    <%= simple_format(user.introduction) %>
  </div>

  <div class="d-flex justify-content-start">
    <%= render'public/relationships/counter', user: user %>
  </div>

  <% if user == current_user %>
    <div class="d-flex justify-content-end">
      <%= link_to "♥ いいねした投稿一覧", user_favorites_path, class: "btn btn-outline-danger btn-sm mr-2" %>
    </div>
  <% end %>
</div>