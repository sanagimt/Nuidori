<% if current_user.following?(user) && user.following?(current_user) %>
  <%= link_to "相互フォロー中", user_relationships_path(user), 
    method: :delete, 
    class: "btn btn-success follow-button", 
    data: { confirm: "フォローを解除してよろしいですか？" },
    remote: true
  %>
<% elsif current_user.following?(user) %>
  <%= link_to "フォロー中", user_relationships_path(user), 
    method: :delete, 
    class: "btn btn-success follow-button", 
    data: { confirm: "フォローを解除してよろしいですか？" },
    remote: true
  %>
<% else %>
  <%= link_to "フォローする", user_relationships_path(user), 
    method: :post, 
    class: "btn btn-outline-success follow-button", 
    remote: true 
  %>
<% end %>