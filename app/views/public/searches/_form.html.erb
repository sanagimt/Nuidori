<% if admin_signed_in? %>
  <%= form_with url: admin_search_path, local: true, method: :get, html: { class: "search-form" } do |f| %>
    <%= f.text_field :content, placeholder: "キーワード", class: "search-input" %>
    <%= f.select :model, options_for_select({"ユーザー" => "user", "投稿" => "post"}), {}, class: "search-select" %>
    <%= f.submit "🔍 検索", class: "cute-submit" %>
  <% end %>
<% elsif user_signed_in? %>
  <%= form_with url: search_path, local: true, method: :get, html: { class: "search-form" } do |f| %>
    <%= f.text_field :content, placeholder: "キーワード", class: "search-input" %>
    <%= f.select :model, options_for_select({"ユーザー" => "user", "投稿" => "post"}), {}, class: "search-select" %>
    <%= f.submit "🔍 検索", class: "search-submit" %>
  <% end %>
<% end %>